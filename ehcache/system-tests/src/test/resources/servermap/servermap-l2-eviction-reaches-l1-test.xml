<?xml version="1.0" encoding="UTF-8"?>

<ehcache name="test">

  <defaultCache
      maxElementsInMemory="0"
      eternal="true"/>
  
  <cache name="test"
         maxElementsInMemory="100"
         eternal="false"
         maxElementsOnDisk="100">

      <terracotta clustered="true" storageStrategy="DCV2" concurrency="1" />
  </cache>
  
  <cache name="testWithConcurrency"
         maxElementsInMemory="50"
         eternal="false"
         maxElementsOnDisk="100">

      <terracotta clustered="true" storageStrategy="DCV2" concurrency="50" />
  </cache>

  <terracottaConfig url="localhost:PORT"/>

</ehcache>
