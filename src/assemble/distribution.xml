<assembly>
    <id>distribution</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*.jar</include>
                <include>*.sources.jar</include>
                <include>*.javadoc.jar</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble</directory>
            <includes>
                <include>*.txt</include>
                <include>*.TXT</include>
            </includes>
            <excludes>
                <exclude>*LICENSE*</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble</directory>
            <includes>
                <include>*LICENSE.txt</include>
                <include>*LICENSE.TXT</include>
            </includes>
            <outputDirectory>/licenses</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/config</directory>
            <includes>
                <include>*.txt</include>
                <include>*.xml</include>
                <include>*.xsd</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>net.sf.ehcache:ehcache</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <scope>provided</scope>
            <excludes>
                <exclude>javax.servlet:servlet-api</exclude>
                <exclude>net.sf.ehcache:ehcache</exclude>
                <exclude>org.slf4j:slf4j-api</exclude>
                <exclude>asm:asm-attrs</exclude>
                <exclude>asm:asm</exclude>
                <exclude>org.hibernate:hibernate</exclude>
                <exclude>org.hibernate:hibernate-core</exclude>
                <exclude>org.codehaus.btm:btm</exclude>
                <exclude>org.apache.geronimo.specs:geronimo-jms_1.1_spec</exclude>
                <exclude>org.apache.geronimo.specs:geronimo-jta_1.0.1B_spec</exclude>
                <exclude>javax.transaction:jta</exclude>
                <exclude>xml-apis:xml-apis</exclude>
                <exclude>commons-collections:commons-collections</exclude>
                <exclude>antlr:antlr</exclude>
                <exclude>cglib:cglib</exclude>
                <exclude>dom4j:dom4j</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>