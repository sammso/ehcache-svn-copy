<?xml version="1.0" encoding="UTF-8" ?>

<assembly>
  <id>jar</id>

  <formats>
    <format>jar</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/classes</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/maven-archiver</directory>
      <outputDirectory>/META-INF/maven/${project.groupId}/${project.artifactId}</outputDirectory>
      <includes>
        <include>pom.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}</directory>
      <outputDirectory>/META-INF/maven/${project.groupId}/${project.artifactId}</outputDirectory>
      <includes>
        <include>pom.xml</include>
      </includes>
    </fileSet>    
  </fileSets>

  <dependencySets>
    
    <!-- XXX: Need some build information! -->    
    
    <dependencySet>
      <outputDirectory>META-INF/terracotta/TIMs</outputDirectory>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <includes>
        <include>org.terracotta.modules:tim-ehcache*</include>
      </includes>
      <unpackOptions>
        <excludes>
          <exclude>**/META-INF/maven/**</exclude>
        </excludes>
      </unpackOptions>      
      <scope>provided</scope>
    </dependencySet>

    <dependencySet>
      <unpack>true</unpack>
      <includes>
        <include>net.sf.ehcache:ehcache-terracotta-bootstrap</include>
      </includes>
      <unpackOptions>
        <excludes>
          <exclude>**/META-INF/maven/**</exclude>
        </excludes>
      </unpackOptions>
      <scope>provided</scope>      
    </dependencySet>

  </dependencySets>
</assembly>
