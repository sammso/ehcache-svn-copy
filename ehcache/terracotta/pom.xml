<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>net.sf.ehcache</groupId>
    <artifactId>ehcache-root</artifactId>
    <version>2.6.0-SNAPSHOT</version>
  </parent>

  <name>Ehcache Terracotta Support</name>
  <groupId>net.sf.ehcache</groupId>
  <artifactId>ehcache-terracotta-root</artifactId>
  <packaging>pom</packaging>


  <modules>
    <module>tim-ehcache-2.x-hibernate-ui</module>
    <module>tim-ehcache-2.x</module>
    <module>tim-ehcache-2.x-ui</module>  
    <module>bootstrap</module>
    <module>packaging</module>
    <module>system-tests</module>
  </modules>

  <properties>
    <terracotta-toolkit-1.0-api.version>1.0.0</terracotta-toolkit-1.0-api.version>
    <terracotta.core.version>3.7.0-SNAPSHOT</terracotta.core.version>
    <tim-api.version>1.3.0</tim-api.version>
  </properties>

  <profiles>
    <profile>
      <id>deploy-sourceforge</id>
        <distributionManagement>
          <snapshotRepository>
            <id>sourceforge-snapshots</id>
            <name>Sourceforge Snapshots</name>
            <uniqueVersion>false</uniqueVersion>
            <url>http://oss.sonatype.org/content/repositories/sourceforge-snapshots</url>
          </snapshotRepository>        
          <repository>
            <id>sourceforge-releases</id>
            <name>Sourceforge Releases</name>
            <url>http://oss.sonatype.org/service/local/staging/deploy/maven2</url>
          </repository>
        </distributionManagement>
    </profile>
  </profiles>  

  <repositories>
    <repository>
      <id>terracotta-repository</id>
      <url>http://www.terracotta.org/download/reflector/releases</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>terracotta-repository</id>
      <url>http://www.terracotta.org/download/reflector/releases</url>
    </pluginRepository>
  </pluginRepositories>
</project>
