<assembly>
    <id>distribution</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*-sources.jar</include>
            </includes>
            <outputDirectory>sources</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*-javadoc.jar</include>
            </includes>
            <outputDirectory>doc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/war/work/net.sf.ehcache/ehcache-server</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>webapp-cache.xml</exclude>
            </excludes>
            <outputDirectory>/war</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble</directory>
            <includes>
                <include>*.txt</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>${artifact.artifactId}-${artifact.version}.jar</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
    </fileSets>
        <dependencySets>
            <dependencySet>
                <outputDirectory>lib</outputDirectory>
                <unpack>false</unpack>
                <scope>runtime</scope>
            </dependencySet>
        </dependencySets>

