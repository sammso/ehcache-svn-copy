<assembly>
    <id>distribution</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*.jar</include>
                <include>*.sources.jar</include>
                <include>*.javadoc.jar</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble</directory>
            <includes>
                <include>*.txt</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/config</directory>
            <includes>
                <include>*.txt</include>
                <include>*.xml</include>
                <include>*.xsd</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>net.sf.ehcache:ehcache</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <scope>provided</scope>
            <excludes>
                <exclude>net.sf.ehcache:ehcache</exclude>
                <exclude>org.slf4j:slf4j-api</exclude>
                <exclude>asm:asm-attrs</exclude>
                <exclude>asm:asm</exclude>
                <exclude>org.hibernate:hibernate</exclude>
                <exclude>commons-collections:commons-collections</exclude>
                <exclude>antlr:antlr</exclude>
                <exclude>cglib:cglib</exclude>
                <exclude>dom4j:dom4j</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>