<assembly>
    <id>distribution</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*-sources.jar</include>
            </includes>
            <outputDirectory>sources</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*-javadoc.jar</include>
            </includes>
            <outputDirectory>doc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/war/work/net.sf.ehcache/ehcache-server</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>webapp-cache.xml</exclude>
            </excludes>
            <outputDirectory>/war</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble</directory>
            <includes>
                <include>*.txt</include>
            </includes>
            <excludes>
                <exclude>RUNNING.txt</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble</directory>
            <includes>
                <include></include>
            </includes>
            <outputDirectory>logs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble</directory>
            <includes>
                <include></include>
            </includes>
            <outputDirectory>pid</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble</directory>
            <includes>
                <include>*.gz</include>
            </includes>
            <fileMode>0755</fileMode>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>${artifact.artifactId}-${artifact.version}.jar</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/src/assemble/daemon_start.sh</source>
            <outputDirectory>bin</outputDirectory>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>${basedir}/src/assemble/daemon_stop.sh</source>
            <outputDirectory>bin</outputDirectory>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>${basedir}/src/assemble/RUNNING.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/assemble/startup.sh</source>
            <outputDirectory>bin</outputDirectory>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>net.sf.ehcache:ehcache-server</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>